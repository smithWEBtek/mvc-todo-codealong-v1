<section class="todoapp">
  <header class="header">
    <h1>Your Lists</h1>
    <%= form_for(@list) do |f| %>
      <%= f.text_field :name, :class => "new-todo", :placeholder => (@list.errors.full_messages_for(:name))[0] || "Enter a new list name"%>
      <%= f.submit :style => "display: none" %>
    <% end %>
  </header>
    <section class="main">
      <ul class="todo_list">
          <% @lists.each do |list| %>
          <li>
            <div class="view">
              <h2><%= link_to list.name, list_path(list) %></h2>
            </div>
          </li>
          <% end %>
      </ul>
    </section>
  <footer class="footer">
  </footer>
</section>

<footer class="info">
  <p><h3>You are logged in as: <%= current_user.email.upcase %></h3></p>  
  <p><%= link_to 'Logout', logout_path %></p>
</footer>
